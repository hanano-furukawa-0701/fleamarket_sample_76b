.header
  = image_tag 'logo.png',size:"140x41",alt:"ロゴ",class:"logo"
.content
  .content_body
    %h2 会員情報入力
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: @user
      .content_body_name
        .field
          .field_box
            = f.label :ニックネーム
            .mustbox
              必須
            %br/
          = f.text_field :Nickname,:size=>"38", autofocus: true, autocomplete: "Nickname",placeholder: "例）フリマ太郎"

        .field
          .field_box
            = f.label :メールアドレス
            .mustbox
              必須
            %br/
          = f.email_field :email,:size=>"38", autofocus: true, autocomplete: "email",placeholder: "PC・携帯どちらでも可"
        .field
          .field_box
            = f.label :パスワード
            .mustbox
              必須
            %br/
          - if @minimum_password_length
            %em
            -# (#{@minimum_password_length} characters minimum)
          
            = f.password_field :password, :size=>"38",autocomplete: "new-password", pattern:"[a-zA-Z0-9]+",placeholder:"7文字以上半角英数字"

        .field
          .field_box
            = f.label :パスワード再確認
            .mustbox
              必須
            %br/
          - if @minimum_password_length
            %em
            -# (#{@minimum_password_length} characters minimum)
          
            = f.password_field :password, :size=>"38",autocomplete: "new-password", pattern:"[a-zA-Z0-9]+",placeholder:"7文字以上半角英数字"

      .confirmation_text
        本人確認
      .confirmation_text
        安心・安全にご利用いただくために、
        %br/
        お客さまの本人情報の 
        
        登録にご協力ください。
        %br/
        他のお客さまに公開されることは
        ありません。
      
      .name
        .field
          .field_boxtwo
            = f.label :お名前（全角）
            .mustbox
              必須
          
          .namebox
            = f.text_field :First_name, :size=>"15",autofocus: true, autocomplete: "First_name",placeholder: "例）山田"
            .field
              = f.text_field :Family_name, :size=>"15",autofocus: true, autocomplete: "Family_name",placeholder: "例）太郎"

      .name
        .field
          .field_boxtwo
            = f.label :お名前カナ（全角）
            .mustbox
              必須
          .namebox
            = f.text_field :First_name_kana, :size=>"15",autofocus: true, autocomplete: "First_name_kana",placeholder: "例）ヤマダ"
            .field
              = f.text_field :Family_name_kana, :size=>"15",autofocus: true, autocomplete: "Family_name_kana",placeholder: "例）タロウ"

      .birth
        .field
          .field_three
            = f.label :生年月日
            .mustbox
              必須
          .birth_box
            .field
            =raw sprintf(f.date_select(:Birth_day,size:50,start_year: 1920, end_year: Time.now.year, class: 'required', :use_month_numbers => true, :date_separator => '%s'),'年','月')
            日

      .attention
        ＊本人情報は正しく入力してください。
        %br/
        会員登録後
        修正するにはお時間を頂く場合があります。
      .actions
        = f.submit "次へ進む",class:"btn"
        


= render "items/footer"